<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_activity_team_reservations_tv_locationName_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/list_item_activity_team_reservations_tv_locationName_hint"
            android:textColor="@color/darkGrey"/>

        <TextView
            android:id="@+id/list_item_activity_team_reservations_tv_locationName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_activity_team_reservations_tv_activityName_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/list_item_activity_team_reservations_tv_activityName" />

        <TextView
            android:id="@+id/list_item_activity_team_reservations_tv_activityName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_activity_team_reservations_tv_bookedDate_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/darkGrey"
            android:text="@string/list_item_activity_team_reservations_tv_bookedDate_hint" />

        <TextView
            android:id="@+id/list_item_activity_team_reservations_tv_bookedDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_group_activity_team_reservations_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/darkOrange"
        android:layout_weight="1"
        android:textStyle="bold"
        android:gravity="end"
        android:text="@string/list_group_activity_team_reservations_date_hint" />

    <TextView
        android:id="@+id/list_group_activity_team_reservations_tv_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/darkOrange"
        android:text="@string/list_group_activity_team_reservations_tv_hours_hint" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ClaimLocationActivity"
    android:background="@drawable/background_orange">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/claimLocation_til_LocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/claimLocation_tid_LocationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/claimLocation_tid_LocationName_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/claimLocation_til_streetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimLocation_til_postalCode">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/claimLocation_tid_streetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/claimLocation_til_streetName_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/claimLocation_til_streetNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimLocation_til_streetName">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/claimLocation_tid_streetNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/claimLocation_tid_streetNumber_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/signUpLocation_til_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimLocation_til_userName">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/claimLocation_tid_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/claimLocation_tid_email_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/claimLocation_til_password"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpLocation_til_email">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/claimLocation_tid_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/claimLocation_tid_password_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/claimLocation_til_confirmPassword"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimLocation_til_password">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/claimLocation_tid_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/claimLocation_tid_confirmPassword_hint" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/claimLocation_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/claimLocation_btn_save_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toEndOf="@+id/claimLocation_btn_back"
        app:layout_constraintTop_toBottomOf="@+id/claimLocation_ck_reservation" />

    <Button
        android:id="@+id/claimLocation_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/claimLocation_btn_back_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimLocation_ck_reservation" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/claimLocation_til_postalCode"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimLocation_til_LocationName">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/claimLocation_tid_postalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/claimLocation_tid_postalCode_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/claimLocation_til_userName"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimLocation_til_streetNumber">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/claimLocation_tid_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/claimLocation_tid_userName_hint" />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/claimLocation_ck_reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/claimLocation_ck_reservation_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimLocation_til_confirmPassword" />


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/linear_layout_location_admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_location_userName_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/list_item_location_userName_hint"
            android:textColor="@color/darkGrey"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/list_item_location_userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_location_email_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1"
            android:text="@string/list_item_location_email_hint"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/list_item_location_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_location_postalCode_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/darkGrey"
            android:text="@string/list_item_location_postalCode_hint"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/list_item_location_postalCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_location_locationAddress_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/darkGrey"
            android:text="@string/list_item_location_locationAddress_hint"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/list_item_location_locationAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_location_latitude_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:textColor="@color/darkGrey"
            android:text="@string/list_item_location_latitude_hint" />

        <TextView
            android:id="@+id/list_item_location_latitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1.0"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_location_longitude_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:textColor="@color/darkGrey"
            android:text="@string/list_item_location_longitude_hint" />

        <TextView
            android:id="@+id/list_item_location_longitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1.0"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_location_reservation_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:textColor="@color/darkGrey"
            android:text="@string/list_item_location_reservation_hint" />

        <TextView
            android:id="@+id/list_item_location_reservation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/darkGrey"
            android:layout_weight="1.0" />
    </LinearLayout>

    <Button
        android:id="@+id/list_item_location_admin_btn_verifyInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_gravity="center"
        android:focusable="false"
        android:clickable="false"
        android:text="@string/list_item_location_admin_btn_verifyInfo_hint" />

</LinearLayout>
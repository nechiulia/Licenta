<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/list_item_usersExplorer_iv_userPicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/woman"
        android:contentDescription="@string/profile_img_profile_hint" />

    <TextView
        android:id="@+id/list_item_usersExplorer_tv_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:text="@string/register1_userName_hint"
        android:textColor="@color/darkGrey" />
</LinearLayout>
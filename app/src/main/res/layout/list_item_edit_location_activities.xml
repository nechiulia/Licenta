<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_edit_location_activities_tv_activityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/darkGrey"
            android:textStyle="bold"
            android:layout_weight="0.9"
            android:text="@string/list_item_edit_location_activities_tv_activityName_hint" />

        <TextView
            android:id="@+id/list_item_edit_location_activities_tv_activityDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/darkGrey"
            android:layout_weight="1.0"
            android:text="@string/list_item_edit_location_activities_tv_activityDifficulty_hint" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/list_item_edit_location_activities_ck"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.01"
        android:focusable="false"
        android:clickable="false"
        android:backgroundTint="@color/darkGrey"
        android:buttonTint="@color/darkGrey"
        android:foregroundTint="@color/darkGrey"
        android:gravity="end" />

</LinearLayout>